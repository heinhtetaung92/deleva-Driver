<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="knayi.delevadriver.CreditCardActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Credit Card Information"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:textStyle="bold"/>


    <EditText

        android:id="@+id/card_number"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:background="@drawable/rounded_border2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:hint="Card Number"
        android:inputType="number"
        android:singleLine="true" />

    <EditText

        android:id="@+id/card_expMonth"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:background="@drawable/rounded_border2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:hint="Card Expire Month"
        android:inputType="number"
        android:singleLine="true" />

    <EditText

        android:id="@+id/card_expYear"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:background="@drawable/rounded_border2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Card Expire Year"
        android:singleLine="true" />

    <EditText

        android:id="@+id/card_cvv"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:background="@drawable/rounded_border2"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:inputType="number"
        android:layout_height="wrap_content"
        android:hint="CVV"
        android:singleLine="true" />


    <Button
        android:id="@+id/card_btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:background="@drawable/loginselector"
        android:layout_margin="10dp"
        />




</LinearLayout>
