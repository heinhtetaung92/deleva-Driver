<FrameLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="knayi.delevadriver.ProfileActivity" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <!--<ImageView
                android:id="@+id/profile_picture"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="30dp"/>-->


            <com.makeramen.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_picture"
                android:scaleType="fitCenter"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:riv_corner_radius="30dip"
                app:riv_border_width="2dip"
                app:riv_border_color="#333333"
                app:riv_mutate_background="true"
                app:riv_oval="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_picture"
                android:textSize="20dp"
                android:text="Name"/>

            <TextView
                android:id="@+id/profile_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_picture"
                android:layout_toRightOf="@id/profile_name"
                android:textSize="20dp"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_name_value"
                android:textSize="20dp"
                android:text="Email"/>

            <TextView
                android:id="@+id/profile_email_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_name_value"
                android:layout_toRightOf="@id/profile_email"
                android:textSize="20dp"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:id="@+id/profile_phone"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_email_value"
                android:textSize="20dp"
                android:text="Phone"/>

            <TextView
                android:id="@+id/profile_phone_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_email_value"
                android:layout_toRightOf="@id/profile_phone"
                android:textSize="20dp"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:id="@+id/profile_address"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_phone_value"
                android:textSize="20dp"
                android:text="Address"/>


            <TextView
                android:id="@+id/profile_address_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_phone_value"
                android:textSize="20dp"
                android:layout_toRightOf="@id/profile_address"/>



        </RelativeLayout>

</FrameLayout>