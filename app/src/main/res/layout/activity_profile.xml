<FrameLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="knayi.delevadriver.ProfileActivity" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:background="@color/primary"/>


            <TextView
                android:id="@+id/profile_name"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_picture"
                android:text="Name"/>

            <TextView
            android:id="@+id/profile_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_picture"
            android:layout_toRightOf="@id/profile_name"/>

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_name_value"
                android:text="Email"/>

            <TextView
                android:id="@+id/profile_email_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_name_value"
                android:layout_toRightOf="@id/profile_email"/>

            <TextView
                android:id="@+id/profile_phone"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_email_value"
                android:text="Phone"/>

            <TextView
                android:id="@+id/profile_phone_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_email_value"
                android:layout_toRightOf="@id/profile_phone"/>

            <TextView
                android:id="@+id/profile_address"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_phone_value"
                android:text="Address"/>


            <TextView
                android:id="@+id/profile_address_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_phone_value"
                android:layout_toRightOf="@id/profile_address"/>



        </RelativeLayout>

</FrameLayout>