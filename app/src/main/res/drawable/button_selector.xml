<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#b3b3b3"/>
                    <corners android:radius="1dp"/>
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="3px">
                <shape>
                    <padding android:bottom="5dp"/>
                    <solid android:color="@color/primary"/>
                    <stroke android:color="#aaf3f3f3" android:width="1dp"/>
                    <corners android:radius="1dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#ffffff"/>
                    <corners android:radius="1dp"/>
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="3px">
                <shape>
                    <padding android:bottom="5dp"/>
                    <solid android:color="@color/tranprimary"/>
                    <stroke android:color="#aaf3f3f3" android:width="1dp"/>
                    <corners android:radius="1dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
 